{ //https://stardewvalleywiki.com/Modding:Migrate_to_Stardew_Valley_1.6.16
 "Format": "2.7.0",
 "ConfigSchema": {
  "Spicier Content": {
   "AllowValues": "Mild, Medium, Hot",
   "Default": "Mild",
   "Section": "Content",
   "Description": "Mild is rated-E for everyone. Medium has IMPLICATIONS. Hot is Rated-R."
  },
  "TalkingHeads": {
   "AllowValues": "true, false",
   "Default": true,
   "Section": "Appearance",
   "Description": "Don't know why you'd turn off the main appeal of version 2.0 but you're free to turn off animated higher definition portraits."
  },
  "Appearance": {
   "AllowValues": "Vanilla Compliant, Aviroen Style, GoodnightLou (Nyapu), Use Custom",
   "Default": "Aviroen Style",
   "Section": "Appearance",
   "Description": "This toggles between the portrait art. 'Use Custom' will turn off all portrait changes."
  }
 },
 "DynamicTokens": [
  //Day of the Week shortened
  {
   "Name": "Weekday",
   "Value": "Sun",
   "When": {
    "DayOfWeek": "Sunday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Mon",
   "When": {
    "DayOfWeek": "Monday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Tue",
   "When": {
    "DayOfWeek": "Tuesday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Wed",
   "When": {
    "DayOfWeek": "Wednesday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Thu",
   "When": {
    "DayOfWeek": "Thursday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Fri",
   "When": {
    "DayOfWeek": "Friday"
   }
  },
  {
   "Name": "Weekday",
   "Value": "Sat",
   "When": {
    "DayOfWeek": "Saturday"
   }
  },
  //standalone vs SVE
  {
   "Name": "SVEToken",
   "Value": "FlashShifter.StardewValleyExpandedCP"
  },
  {
   "Name": "Lance",
   "Value": "Lance",
   "When": {
    "HasMod |contains={{SVEToken}}": true
   }
  },
  {
   "Name": "Lance",
   "Value": "{{ModId}}_Lance",
   "When": {
    "HasMod |contains={{SVEToken}}": false
   }
  },
  {
   "Name": "VSToken",
   "Value": "Aviroen.VoidsentCP"
  },
  {
   "Name": "LocToken",
   "Value": "Spiderbuttons.BETAS_ Aviroen.LanceExpanded {{Lance}}]"
  },
  {
   "Name": "iroTH",
   "Value": "TalkingHeads/{{ModId}}/Lance-"
  },
  {
   "Name": "RandRange",
   "Value": "{{Random:{{Range: 0, 3}}}}"
  },
  {
   "Name": "CleanLoc",
   "Value": "[LocalizedText {{ModId}}/Dialogue/Lance:"
  },
  {
   "Name": "GenLoc",
   "Value": "[LocalizedText {{ModId}}/Dialogue/Lance/General:"
  },
  {
   "Name": "SVETog",
   "Value": "SVE.",
   "When": {
    "HasMod |contains={{SVEToken}}": true
   }
  },
  {
   "Name": "SVETog",
   "Value": "",
   "When": {
    "HasMod |contains={{SVEToken}}": false
   }
  },
  {
   "Name": "BETASLoc",
   "Value": "Spiderbuttons.BETAS_SetNewDialogue {{Lance}} {{CleanLoc}}BETAS.{{SVETog}}"
  },
  {
   "Name": "WizLoc",
   "Value": "Spiderbuttons.BETAS_SetNewDialogue Wizard {{CleanLoc}}BETAS.Wiz.{{SVETog}}"
  },
  {
   "Name": "Affection",
   "Value": "Good",
   "When": {
    "Relationship:{{Lance}}": "Married"
   }
  },
  {
   "Name": "Affection",
   "Value": "Bad",
   "When": {
    "Relationship:{{Lance}}": "Married",
    "Hearts:{{Lance}}": "11",
    "Query: {{Random: {{Range:0,5}} }} > 4": true
   }
  },
  {
   "Name": "Affection",
   "Value": "Neutral",
   "When": {
    "Relationship:{{Lance}}": "Married",
    "Hearts:{{Lance}}": "12",
    "Query: {{Random: {{Range:0,5}} }} < 4": true
   }
  },
  {
   "Name": "Room",
   "Value": "{{ModId}}_Room"
  }
 ],
 ////////////////////////////////////////////////////////// START OF CHANGES
 "Changes": [
  {
   "Action": "Load",
   "Priority": "Low",
   "Target": "Maps/{{ModId}}_Qiroom, Maps/{{ModId}}_Room",
   "FromFile": "assets/Maps/{{TargetWithoutPath}}.tmx"
  },
  {
   "Action": "Load",
   "Priority": "Low",
   "Target": "Maps/SuzukiPC_Portal, Maps/Aviroen_Portal",
   "FromFile": "assets/Misc/{{TargetWithoutPath}}.png"
  },
  { //blank loads so that i can target edit
   "LogName": "BlankLoads",
   "Action": "Load",
   "Priority": "Low",
   "Target": "Characters/Dialogue/{{Lance}}, Characters/Dialogue/MarriageDialogue{{Lance}}, Characters/schedules/{{Lance}}, Strings/Schedules/{{Lance}}, data/events/{{ModId}}_Qiroom, data/events/{{ModId}}_Room, Data/Events/Caldera, Data/Events/AdventureGuild",
   "FromFile": "Blank.json"
  },
  {
   "Action": "Load",
   "FromFile": "{{FirstValidFile: i18n/{{language}}/SVELance.json, i18n/default/SVELance.json}}",
   "Priority": "Low",
   "When": {
    "HasMod |contains={{SVEToken}}": true
   },
   "Target": "{{ModId}}/Dialogue/Lance"
  },
  {
   "Action": "Load",
   "FromFile": "{{FirstValidFile: i18n/{{language}}/Lance.json, i18n/default/Lance.json}}",
   "Priority": "Low",
   "When": {
    "HasMod |contains={{SVEToken}}": false
   },
   "Target": "{{ModId}}/Dialogue/Lance" //{{ModId}}/Dialogue/Lance/General
  },
  {
   "Action": "Load",
   "FromFile": "{{FirstValidFile: i18n/{{language}}/General.json, i18n/default/General.json}}",
   "Priority": "Low",
   "Target": "{{ModId}}/Dialogue/Lance/General"
  },
  {
   "Action": "Include",
   "When": {
    "HasMod |contains={{SVEToken}}": false
   },
   "FromFile": "data/Standalone/StandaloneEvents.json" //data/Standalone/Spiciness/{{Spicier Content}}/HeartEvents.json
  },
  {
   "Action": "Include",
   "When": {
    "HasMod |contains={{SVEToken}}": true
   },
   "FromFile": "data/SVEData/SVEData.json" //data/SVEData/Spiciness/{{Spicier Content}}/HeartEvents.json
  },
  {
   "Action": "Include",
   "FromFile": "data/Char.json, data/Dialogue.json, data/Items.json, data/Spiderbuttons.json, data/TriggerActions.json, data/MMAP.json" //
  },
  {
   "Action": "Include",
   "When": {
    "TalkingHeads": true
   },
   "FromFile": "data/TalkingHeads.json"
  },
  {
   "Action": "Include",
   "When": {
    "Appearance": "Vanilla Compliant, Aviroen Style, GoodnightLou (Nyapu)"
   },
   "FromFile": "data/Outfits.json"
  }
 ]
}
